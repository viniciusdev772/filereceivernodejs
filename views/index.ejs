<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Usuários</title>
    <!-- Inclua o CSS do Tailwind -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-4">Lista de Usuários</h1>
      <ul>
        <% usuarios.forEach(function(usuario) { %>
        <li class="bg-white shadow-md rounded-md p-4 mb-4">
          <p class="text-lg font-semibold">Nome: <%= usuario.nome %></p>
          <p class="text-gray-600">Email: <%= usuario.email %></p>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>

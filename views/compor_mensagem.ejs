<!-- views/compor_mensagem.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Compor Mensagem</title>
    <!-- Inclua o CSS do Tailwind -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-4">Compor Mensagem</h1>
      <!-- FormulÃ¡rio para compor a mensagem -->
      <form action="/enviar_email_todos_usuarios" method="POST">
        <div class="mb-4">
          <label for="assunto" class="block text-gray-700 font-bold mb-2"
            >Assunto:</label
          >
          <input
            type="text"
            id="assunto"
            name="assunto"
            class="border rounded px-4 py-2 w-full"
            required
          />
        </div>
        <div class="mb-4">
          <label for="mensagem" class="block text-gray-700 font-bold mb-2"
            >Mensagem:</label
          >
          <textarea
            id="mensagem"
            name="mensagem"
            class="border rounded px-4 py-2 w-full h-32"
            required
          ></textarea>
        </div>
        <button
          type="submit"
          class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
        >
          Enviar Email
        </button>
      </form>
    </div>
  </body>
</html>
